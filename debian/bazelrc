try-import /etc/bazel.bazelrc
startup --install_base=/usr/share/bazel
startup --trust_install_base
startup --host_jvm_args="-XX:+UseParallelGC"
startup --host_jvm_args="-XX:+IgnoreUnrecognizedVMOptions"
build --host_javabase=@local_jdk//:jdk
build --javacopt="-XX:+UseParallelGC"
build --host_javacopt="-XX:+UseParallelGC"
build --javacopt="-XX:+IgnoreUnrecognizedVMOptions"
build --host_javacopt="-XX:+IgnoreUnrecognizedVMOptions"
